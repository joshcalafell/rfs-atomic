{
	"compileOnSave": false,
	"angularCompilerOptions": {
		"enableI18nLegacyMessageIdFormat": false,
		"strictInjectionParameters": true,
		"disableTypeScriptVersionCheck": true,
		"strictTemplates": true
	},
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@rfs-atomic/about": ["libs/about/src/index.ts"],
			"@rfs-atomic/button": ["libs/button/src/index.ts"],
			"@rfs-atomic/button-row": ["libs/button-row/src/index.ts"],
			"@rfs-atomic/card-cta": ["libs/card-cta/src/index.ts"],
			"@rfs-atomic/card-list": ["libs/card-list/src/index.ts"],
			"@rfs-atomic/card-nav": ["libs/card-nav/src/index.ts"],
			"@rfs-atomic/cart": ["libs/cart/src/index.ts"],
			"@rfs-atomic/chip": ["libs/chip/src/index.ts"],
			"@rfs-atomic/description-list": ["libs/description-list/src/index.ts"],
			"@rfs-atomic/desktop-menu": ["libs/desktop-menu/src/index.ts"],
			"@rfs-atomic/detail-group": ["libs/detail-group/src/index.ts"],
			"@rfs-atomic/drag-drop": ["libs/drag-drop/src/index.ts"],
			"@rfs-atomic/footer": ["libs/footer/src/index.ts"],
			"@rfs-atomic/hashes": ["libs/hashes/src/index.ts"],
			"@rfs-atomic/header": ["libs/header/src/index.ts"],
			"@rfs-atomic/link": ["libs/link/src/index.ts"],
			"@rfs-atomic/not-found": ["libs/not-found/src/index.ts"],
			"@rfs-atomic/orders": ["libs/orders/src/index.ts"],
			"@rfs-atomic/product-card": ["libs/product-card/src/index.ts"],
			"@rfs-atomic/product-card-header": [
				"libs/product-card-header/src/index.ts"
			],
			"@rfs-atomic/product-description-list": [
				"libs/product-description-list/src/index.ts"
			],
			"@rfs-atomic/product-ratings": ["libs/product-ratings/src/index.ts"],
			"@rfs-atomic/product-ratings-star": [
				"libs/product-ratings-star/src/index.ts"
			],
			"@rfs-atomic/products": ["libs/products/src/index.ts"],
			"@rfs-atomic/sale-tag": ["libs/sale-tag/src/index.ts"],
			"@rfs-atomic/settings": ["libs/settings/src/index.ts"],
			"@rfs-atomic/sort-table": ["libs/sort-table/src/index.ts"],
			"@rfs-atomic/ui": ["libs/ui/src/index.ts"],
			"@rfs-atomic/wishlist": ["libs/wishlist/src/index.ts"],
			"@rfs-atomic/wishlist-item": ["libs/wishlist-item/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
